<Window x:Class="WPFGoT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGoT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="269*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Label Content="Que voulez faire ?" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Grid.Row="0"/>
        <Button Content="Entrer un nouveau personnage" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Click="OuvreSaisiePerso"/>
        <Button Content="Entrer une nouvelle maison" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" ScrollViewer.CanContentScroll="True" Click="OuvreSaisieMaison"/>

    </Grid>
</Window>
