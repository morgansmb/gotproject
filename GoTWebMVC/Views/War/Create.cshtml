@model GoTWebMVC.Models.CreateWarModel

@{
    ViewBag.Title = "Guerre";
}
<br/>
<h2>Création d'une guerre !</h2>
<br />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sélection des maisons :</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-lg-4">
                <label for="AllyHouse">Première maison :</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SelectedAllyHouse, new SelectList(Model.Houses, "ID", "Name"), htmlAttributes: new { @class = "form-control", id = "AllyHouse" })
                </div>
            </div>

            <div class="col-lg-1">
                <b>VS.</b>
            </div>

            <div class="col-lg-5">
                <label for="EnnemyHouse">Deuxième maison :</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(x => Model.SelectedEnnemyHouse, new SelectList(Model.Houses, "ID", "Name"), htmlAttributes: new { @class = "form-control", id = "EnnemyHouse" })
                </div>
            </div>
        </div>

        <br />
        <br />

        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à la liste", "List", new { @class = "btn btn-primary btn-large" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
